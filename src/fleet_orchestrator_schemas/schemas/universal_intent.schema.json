{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "UniversalIntent",
  "type": "object",
  "required": ["type", "intent_id", "timestamp_utc", "source", "text"],
  "properties": {
    "type": { "const": "universal_intent" },
    "intent_id": { "type": "string", "minLength": 8 },
    "timestamp_utc": { "type": "string", "minLength": 10 },
    "source": {
      "type": "object",
      "required": ["modality", "operator_id"],
      "properties": {
        "modality": { "enum": ["text", "voice", "gui"] },
        "operator_id": { "type": "string" },
        "client_id": { "type": "string" }
      },
      "additionalProperties": true
    },
    "text": { "type": "string", "minLength": 1 },

    "constraints": {
      "type": "object",
      "properties": {
        "time_window_sec": { "type": "number", "minimum": 0 },
        "conserve_battery": { "type": "boolean" },
        "geo_fence": { "type": "string" }
      },
      "additionalProperties": true
    },

    "targets": {
      "type": "object",
      "properties": {
        "fleet_selector": { "type": "string" },
        "vehicle_ids": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
